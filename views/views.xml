<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="res_partner_contact_form" model="ir.ui.view">
      <field name="name">res.partner.inherited</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
          <field name="email" position="after"> 
            <field name="has_first_name" invisible="1"/> 
            <field name="experience" placeholder="Years of experience"/>
            <field name="department" placeholder="Department name"/>
          </field>
          <field name="experience" placeholder="Years of experience"/>
            <field name="department" placeholder="Department name"/>
          <field name="country_id" position="after"> 
            <field name="origin_country" placeholder="Origin country"/>
          </field>
          <field name="name" position="replace" invisible="0">  
            <field id="individual" name="first_name" placeholder="e.g. Brandom" attrs="{'required' : [('type', '=', 'contact'),('is_company','=', False)], 'invisible': [('is_company','=', True),('has_first_name','!=', True)]}"/>
            <field id="company" name="name" placeholder="e.g. My Company" attrs="{'required' : [('type', '=', 'contact'),('is_company','=', True)], 'invisible': [('is_company','=', False)]}"/>
            <field name="last_name" placeholder="e.g. Freeman" attrs="{'required' : [('type', '=', 'contact'),('is_company','=', False)], 'invisible': [('is_company','=', True)]}" />
          </field>
        </field>
    </record>
  </data>
</odoo>



