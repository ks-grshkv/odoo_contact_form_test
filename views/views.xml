    <record id="res_partner_contact_form" model="ir.ui.view">
      <field name="name">res.partner.inherited</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
          <field name="lang" position="after"> 
            <field name="experience" placeholder="Years of experience"/>
            <field name="department" placeholder="Department name"/>
          </field>
          <field name="country_id" position="after"> 
            <field name="origin_country" placeholder="Origin country"/>
          </field>
          <field name="name" position="replace">  
            <field name="has_first_name" invisible="1"/> 
            <field name="is_company" invisible="1"/> 
            <!-- <field id="individual" name="name" invisible="1"/>  -->
            <field id="company" name="new_company_name" placeholder="e.g. MyCompany" attrs="{'required' : [('type', '=', 'contact')], 'invisible': [('is_company','=', False)]}"/>
            <field id="individual" name="first_name" placeholder="e.g. Brandom" attrs="{'invisible': [('is_company','=', True)]}"/>
            <field name="last_name" placeholder="e.g. Freeman" attrs="{'invisible': ['|', ('is_company','=', True), ('first_name','=', False)]}" />
          </field>
        </field>
    </record>
  </data>
</odoo>
